upstream jenkins {
    server JENKINS_PRV:8080;
}

server {
    listen     8080;
    location / {
        proxy_pass http://jenkins;
    }
}

upstream flaskapp {
    server WORKER1:32000;
    server WORKER2:32000;
    server WORKER3:32000;
}

server {
    listen     80;
    location / {
        proxy_pass http://flaskapp;
    }
}

